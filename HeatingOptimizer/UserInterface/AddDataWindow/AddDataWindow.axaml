<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HeatingOptimizer.UI.AddDataWindow"
        xmlns:local="clr-namespace:HeatingOptimizer.UI"
        xmlns:vms="clr-namespace:HeatingOptimizer.UI"
        x:DataType="vms:AddDataViewModel"
        Title="Add a machine">
    <Window.DataContext>
        <vms:AddDataViewModel/>
    </Window.DataContext>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Margin="10" HorizontalAlignment="Center">
            <Run FontSize="25" FontWeight="Light" Foreground="White" Text="Add a machine" />
        </TextBlock>
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding MachineFields}" Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Field" Binding="{Binding Label}" IsReadOnly="True" Width="200"/>
                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Button HorizontalAlignment="Center" Margin="20" Click="AddMachine">Add</Button>
    </StackPanel>
</Window>